{% extends 'base.html.twig' %}

{% block title %}Property{% endblock %}

{% block body %}
    <h1>Property</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ property.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ property.title }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ property.price }}</td>
            </tr>
            <tr>
                <th>Area</th>
                <td>{{ property.area }}</td>
            </tr>
            <tr>
                <th>Room</th>
                <td>{{ property.room }}</td>
            </tr>
            <tr>
                <th>Bedroom</th>
                <td>{{ property.bedroom }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ property.type }}</td>
            </tr>
            <tr>
                <th>Swimming_pool</th>
                <td>{{ property.swimmingPool ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Garden</th>
                <td>{{ property.garden ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Air_conditioner</th>
                <td>{{ property.airConditioner ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Terrace</th>
                <td>{{ property.terrace ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Garage</th>
                <td>{{ property.garage }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('property_index') }}">back to list</a>

    <a href="{{ path('property_edit', {'id': property.id}) }}">edit</a>

    {{ include('property/_delete_form.html.twig') }}
{% endblock %}
